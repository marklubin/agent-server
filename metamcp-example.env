# MetaMCP Configuration
# Copy to metamcp.env and fill in values

# PostgreSQL connection string
# Uses the shared kairix-postgres instance with a separate database
DATABASE_URL=postgresql://kairix:YOUR_POSTGRES_PASSWORD@kairix-postgres:5432/metamcp

# Public URL where MetaMCP will be accessible
APP_URL=http://YOUR_HOST:12008

# Authentication secret - generate with: openssl rand -hex 32 | base64
BETTER_AUTH_SECRET=YOUR_SECRET_HERE
